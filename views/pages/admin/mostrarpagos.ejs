<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Agregar Productos</title>
    <link rel="stylesheet" href="./css/agregarProductos.css">
    <link rel="stylesheet" href="./css/dashboard.css">
</head>


<body>
    <div class="container">
        <%- include('dashboad-lateral.ejs') %>
            <div class="content">
                <h1>Lista de Pagos</h1>

                <table>
                    <thead>
                        <tr>
                            <th>Artículos</th>
                            <th>Fecha de Pago</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Número de Tarjeta</th>
                            <th>Fecha de Vencimiento</th>
                            <th>CVV</th>
                            <th>Monto Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pagos.forEach(pago=> { %>
                            <tr>
                                <td>
                                    <% pago.articulos.forEach(articulo=> { %>
                                        <span>
                                            <%= articulo %>
                                        </span>
                                        <br>
                                        <% }); %>
                                </td>
                                <td>
                                    <%= pago.fecha_pago %>
                                </td>
                                <td>
                                    <%= pago.nombre %>
                                </td>
                                <td>
                                    <%= pago.apellido %>
                                </td>
                                <td>
                                    <%= pago.numeroTarjeta %>
                                </td>
                                <td>
                                    <%= pago.fechaVencimiento %>
                                </td>
                                <td>
                                    <%= pago.cvv %>
                                </td>
                                <td>
                                    <%= pago.montoTotal %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
    </div>

</body>

</html>